<Application x:Class="WarehouseInventoryTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WarehouseInventoryTracker"
             StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<!-- This is the line you need to add. It sets up the theme. -->
				<!-- You can change BaseTheme to "Dark", PrimaryColor, and SecondaryColor to whatever you like! -->
				<materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Teal" SecondaryColor="Orange" />

				<!-- This line is required for the theme to work -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:NullToBooleanConverter x:Key="NullToBooleanConverter"/>

        </ResourceDictionary>
	</Application.Resources>
</Application>